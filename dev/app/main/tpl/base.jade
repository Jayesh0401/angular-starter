div.main-base-container(layout='row')
	md-sidenav.main-sidenav.md-sidenav-left(md-component-id='mainSidenav', md-is-locked-open='$mdMedia(\'gt-md\')', md-whiteframe='4')
		md-content(layout-padding='')
	div.main-container(flex='grow', layout='column')
		md-toolbar.main-toolbar-container.md-primary
			.md-toolbar-tools
				md-button.md-icon-button(aria-label='Menu', ng-disabled='$mdMedia(\'gt-md\')' ng-click='ViewModel.toggleSidenav()')
					i.material-icons
						|	menu
				h2(flex='', md-truncate='')
					|	Dashboard
				md-menu(md-position-mode='target-right target')
					md-button.md-icon-button(aria-label='Open demo menu', ng-click='$mdMenu.open($event)')
						md-icon(md-menu-origin='')
							i.material-icons
								|	more_vert
					md-menu-content(width='4')
						md-menu-item
							md-button(ng-click='ViewModel.logoutUser()')
								|	Logout
		div.main-content-container(ui-view='')